<% title "Types" %>

<table>
  <tr>
    <th>Title</th>
    <th>Groups Count</th>
    <th>Groups Items</th>
    <th>Home Away</th>
  </tr>
  <% for type in @types %>
    <tr>
      <td><%=h type.title %></td>
      <td><%=h type.groups_count %></td>
      <td><%=h type.groups_items %></td>
      <td><%= type.home_away ? :oui : :non %></td>
      <td><%= link_to "Show", type %></td>
      <td><%= link_to "Edit", edit_type_path(type) %></td>
      <td><%= link_to "Destroy", type, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Type", new_type_path %></p>
