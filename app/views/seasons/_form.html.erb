<% form_for @season  , :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Flyer %><br />
    <%= f.file_field :flyer %>
</p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :keywords %><br />
    <%= f.text_area :keywords , :cols => 50 , :rows => 5 , :class => 'mceNoEditor' %>
  </p>
  <p>
    <%= f.label :meta %><br />
    <%= f.text_area :meta , :cols => 50 , :rows => 5 , :class => 'mceNoEditor'  %>
  </p>
  <p>
    <%= f.label :start %><br />
    <%= f.text_field :start , :class => 'datepicker' %>
  </p>
  <p>
    <%= f.label :end %><br />
    <%= f.text_field :end , :class => 'datepicker'%>
  </p>
  <p>
    <%= f.label :is_current_season %><br />
    <%= f.check_box :is_current_season %>
  </p>
  <p><%= f.submit "Enregistrer" %></p>
<% end %>
<script type="text/javascript">
	$(function(){
				$('.datepicker').datepicker({changeMonth: true,changeYear: true});
				$('.datepicker').datepicker($.datepicker.regional['fr']);
			});
</script>


