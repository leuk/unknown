<% form_for [@season , @tournoi , @groupe] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
    <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :keywords %><br />
    <%= f.text_area :keywords , :cols => 50 , :rows => 5 , :class => 'mceNoEditor'%>
  </p>
  <p>
    <%= f.label :meta %><br />
    <%= f.text_area :meta , :cols => 50 , :rows => 5 , :class => 'mceNoEditor'%>
  </p>
    <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  
  <p><%= f.submit "Enregistrer" %></p>
<% end %>
