<% form_for @arbitre  do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :Prénom %><br />
    <%= f.text_field :firstname %>
  </p>
  <p>
    <%= f.label :Nom %><br />
    <%= f.text_field :lastname %>
  </p>
  <p>
    <%= f.label :Photo %><br />
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content , :class => 'mceEditor' %>
  </p>
  <p>
    <%= f.label :Date_de_naissance %><br />
    <%= f.text_field :birthdate , :id => 'datepicker' %>
  </p>
  <p>
    <%= f.label :Adresse %><br />
    <%= f.text_field :adress %>
  </p>
  <p>
    <%= f.label :Téléphone_Cellulaire %><br />
    <%= f.text_field :cell_phone %>
  </p>
  <p>
    <%= f.label :Téléphone_domicile %><br />
    <%= f.text_field :home_phone %>
  </p>
  <p>
    <%= f.label :Email %><br />
    <%= f.text_field :email %>
  </p>
  <p><%= f.submit "Enregistrer" %></p>
<% end %>
<script type="text/javascript">
	$(function(){$('#datepicker').datepicker();});
</script>

