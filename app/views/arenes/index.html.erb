<% title "Arénes Nationales" %>

<table>
  <tr>
    <th>Title</th>
    <th>Capacity</th>
  </tr>
  <% for arene in @arenes %>
    <tr>
      <td><%=h arene.title %></td>
      <td><%= link_to "Show", arene %></td>
      <td><%= link_to "Edit", edit_arene_path(arene) %></td>
      <td><%= link_to "Destroy", arene, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Ajouter Une Aréne", new_arene_path %></p>
