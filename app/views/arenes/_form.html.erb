<% form_for @arene do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content , :class => 'mceEditor' %>
  </p>
  <p>
    <%= f.label :keywords %><br />
    <%= f.text_field :keywords %>
  </p>
  <p>
    <%= f.label :meta %><br />
    <%= f.text_field :meta %>
  </p>
  <p>
    <%= f.label :capacity %><br />
    <%= f.text_field :capacity %>
  </p>
    <p>
    <%= f.label :Date_de_construction %><br />
    <%= f.text_field :build_date , :id => 'datepicker' %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p><%= f.submit "Enregistrer" %></p>
<% end %>
<script type="text/javascript">
	$(function(){$('#datepicker').datepicker();});
</script>