<% form_for @promoteur , :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :logo %><br />
    <%= f.file_field :logo %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content , :class => 'mceEditor' %>
  </p>
  <p>
    <%= f.label :keywords %><br />
    <%= f.text_area :keywords , :cols => 50 , :rows => 5 , :class => 'mceNoEditor' %>
  </p>
  <p>
    <%= f.label :meta %><br />
    <%= f.text_area :meta , :cols => 50 , :rows => 5 , :class => 'mceNoEditor' %>
  </p>
  <p>
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name %>
  </p>
    <p>
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </p>
    <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
    <p>
    <%= f.label :fax %><br />
    <%= f.text_field :fax %>
  </p>
    <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p><%= f.submit "Enregistrer" %></p>
<% end %>
